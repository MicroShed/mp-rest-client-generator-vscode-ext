{
	"name": "vscode-microprofile-generator",
	"displayName": "MicroProfile Generator Extension",
	"description": "VS Code extension to generate a MicroProfile Rest Client from the openapi-generator",
	"version": "0.0.1",
	"publisher": "IBM",
	"license": "EPL-2.0",
	"preview": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/dev-tools-for-enterprise-java/vscode-microprofile-generator"
	},
	"engines": {
		"vscode": "^1.30.0"
	},
	"categories": [
		"Other"
	],
	"icon": "images/microprofile-logo.png",
	"activationEvents": [
		"onCommand:microprofile.restclient.generate"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "microprofile.restclient.generate",
				"title": "Generate MicroProfile Rest Client",
				"category": "MicroProfile"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "microprofile.restclient.generate",
					"group": "microprofile"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.1.4",
		"vscode": "^1.1.25",
		"tslint": "^5.8.0",
		"@types/node": "^8.10.25",
		"@types/mocha": "^2.2.42"
	},
	"dependencies": {
		"extract-zip": "^1.6.7",
		"fs-extra": "^5.0.0",
		"ncp": "^2.0.0"
	}
}
